<%- include('partials/header') %>
<body>
    <%- include('partials/navbar') %> 
    <table class="table table-striped table-bordered table-hover">
        <tr class="table-info">
            <th scope="col"> 
                Month
            </th>
            <th scope="col"> 
                Total Income
            </th>
            <th scope="col"> 
                Total Expense
            </th>
            <th scope="col"> 
                Amount Left
            </th>
            <th scope="col"> 
                Percentage Saved
            </th>
        </tr>
        <% for (let i = 0; i < test.length / len; i++) {%>
            <tr>
                <td>
                    <%= m[test[i * len].month - 1] %> <%= test[i * len].year %>
                </td>
                <% for (let j = 0; j < len; j++) {%>
                    <td <% if (Number(test[j + i * len].amount) < 0) {%> style="color: red;" <% } %>>
                        <% if (j < len - 1) {%>$<% } %>
                        <% if (j === len - 1 && test[j + i * len].amount === 0) {%> 
                            NA
                        <% } %> 
                        <% if (j !== len - 1 || test[j + i * len].amount !== 0) {%> 
                        <%= test[j + i * len].amount.toFixed(2) %>
                        <% } %> 
                        <% if (j === len - 1 && test[j + i * len].amount !== 0) {%>%<% } %>  
                    </td>
                <% } %> 
             </tr>
        <% } %>  
    </table>
</body>
</html>