<%- include('partials/header') %>
<% let sum = 0 %> 
<body>
    <%- include('partials/navbar') %> 
    <table class="table table-striped table-bordered table-hover">
        <tr class="table-info">
            <th scope="col"> 
                Month
            </th>
            <% for (let category of outflowCategories) {%>
                <th>
                    <%= category %> 
                </th>
            <% } %>  
            <th scope="col">
                Total Spent
            </th>
        </tr>
        <% for (let i = 0; i < test.length / len; i++) {%>
            <tr>
                <td>
                    <%= m[test[i * len].month - 1] %> <%= test[i * len].year %>
                </td>
                <% for (let j = 0; j < len; j++) {%>
                    <td >
                        $<%= test[j + i * len].amount.toFixed(2) %> 
                        <% sum += test[j + i * len].amount%> 
                    </td>
                <% } %>  
                <td>
                    $<%= sum.toFixed(2) %> 
                </td>
             </tr>
        <% } %>  
    </table>
</body>
</html>